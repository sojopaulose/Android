<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/edt1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/b7"
            android:text="7"/>

        <Button
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/b8"
            android:text="8"/>
        <Button
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/b9"
            android:text="9"/>
        <Button
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/bdiv"
            android:text="/"/>
        <Button
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/bequ"
            android:text="="/>

    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <Button
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:id="@+id/b4"
        android:text="4"/>
    <Button
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:id="@+id/b5"
        android:text="5"/>
    <Button
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:id="@+id/b6"
        android:text="6"/>
    <Button
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:id="@+id/bmul"
        android:text="*"/>

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/b1"
            android:text="1"/>
        <Button
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/b2"
            android:text="2"/>
        <Button
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/b3"
            android:text="3"/>
        <Button
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/bsub"
            android:text="-"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/bc"
            android:text="C"/>
        <Button
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/b0"
            android:text="0"/>
        <Button
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/bdot"
            android:text="."/>
        <Button
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/badd"
            android:text="+"/>

    </LinearLayout>



</LinearLayout>